<div class="container">

  <div class="text-center page-header custom-page-header"><h1> Login </h1></div>


  <div class="container text-left my-form col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-12">

  <%= form_for :login do |f| %>

    <div class="form-group">
      <%= f.label :email, class: "control-label" %>
      <%= f.text_field :email, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "control-label" %>
      <%= f.password_field :password, class: "form-control" %>
    </div>

    <div>
      <%= f.submit 'Login', class: "btn btn-primary" %>
      <%= link_to "cancel", home_path, class: "btn btn-secondary" %>
    </div>
    
  <% end %>

  </div>

</div>