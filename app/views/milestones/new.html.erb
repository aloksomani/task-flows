<div class="container">

  <div class="text-left page-header custom-page-header">
    <h1> <%= link_to "#{@project.name}", user_project_path(@project.user, @project) %>
      <small>new milestone</small> 
    </h1>
  </div>


  <%= form_for [@project,@milestone], url: project_milestones_path, method: "post" do |f| %>
    <div class="col-xs-12 col-sm-6 col-md-4">

      <div class="form-group">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.submit 'Save', class: "btn btn-primary" %>
        <%= link_to "cancel", url_for(:back), class: "btn btn-secondary" %>
      </div>

    </div>
  <% end %>

</div>