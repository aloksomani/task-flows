<%= render "layouts/navbar" %>


<h1> <%= @milestone.name %> </h1>

<%= link_to "Edit this Milestone", milestone_edit_path(current_user, @project, @milestone) %>

<%= link_to "Delete this Milestone", project_milestone_path(current_user, @project, @milestone), method: :delete %>

<section>  

  <ul>

    <% @tasks.each do |task|%>
      <li>
        <%= form_for(task, as: :task)  do |f| %>
          <%= task.description %>
          <%= f.submit "Done" %>
        <% end %>
      </li>
    <% end %>

  </ul>

</section>

<section>
  

  <h1>Create a New Task</h1>

  <%= form_for [@milestone, @task], url: tasks_path, method: "post" do |f| %>
    <div>
      <%= f.text_area :description %>
    </div>

    <%= f.submit "Save task" %>

  <% end %>


</section>




<%= link_to "Back to the Project", user_project_path(current_user, @project) %>